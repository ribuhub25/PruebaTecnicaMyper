@{
    ViewData["Title"] = "Trabajadores";
}
<style type="text/css">
    .bg-blue{
        background-color: #6c77e369 !important;
    }
    .bg-orange{
        background-color: #ffd6b680 !important;
    }
</style>
<div class="container">
    <h4 class="text-start py-3">Registro de Trabajadores</h4>
    <div class="d-flex flex-wrap col-12 gap-2 py-3">
        <button class="btn btn-primary btn-sm" onclick="showModal(0);">Nuevo Registro</button>
        <p class="my-auto">Filtro: </p>
        <div class="col-2">
            <select class="form-select" id="ddlFilter" aria-label="Sexo">
                <option value="" selected disabled>--Seleccione Sexo--</option>
                <option value="M">Masculino</option>
                <option value="F">Femenino</option>
            </select>
        </div>
        <button class="btn btn-outline-primary btn-sm" onclick="ApplyFilter();">Aplicar Filtro</button>
        <button class="btn btn-outline-dark btn-sm" onclick="RemoveFilter();">Remover Filtro</button>
    </div>
    <table class="table table-bordered compact custom"
            id="tblTrabajadores"
            cellspacing="0"
            align="center"
            width="100%">
    </table>
</div>
<!--MODAL-->
<div id="modal-container"></div>

<script type="text/javascript">
    $(document).ready(function () {
        LoadTrabajadores();
    });
    function LoadTrabajadores(){
        const tblTrabajadores = $('#tblTrabajadores').DataTable({
            order: [[1, "desc"]],
            destroy: true,
            scrollX: true,
            pagingType: 'full_numbers',
            paging: true,
            ordering: true,
            searching: false,
            info: true,
            processing: true,
            serverSide: false,
            stateSave: false,
            ajax: {
                url: '@Url.Action("GetTrabajadores", "Home")',
                contentType: "application/json",
                type: "GET",
                dataType: "JSON",
                data: function (data) {
                    data.filter = $("#ddlFilter").val();
                    return data;
                },
                dataSrc: function (json) {
                    return json;
                }
            },
            columns: [
                {
                    data: "id",
                    title: "ID",
                    visible: false,
                    orderable: false,
                    searchable: false,
                    render: function (data, type, row, meta) {
                        return row.id;
                    }
                },
                {
                    data: "tipoDocumento",
                    title: "Tipo Doc.",
                    visible: true,
                    orderable: true,
                    searchable: false,
                    render: function (data, type, row, meta) {
                        return row.tipoDocumento;
                    }
                },
                {
                    data: "numeroDocumento",
                    title: "Num. Doc.",
                    visible: true,
                    orderable: true,
                    searchable: false,
                    render: function (data, type, row, meta) {
                        return row.numeroDocumento;
                    }
                },
                {
                    data: "nombres",
                    title: "Nombres",
                    visible: true,
                    orderable: true,
                    searchable: false,
                    render: function (data, type, row, meta) {
                        return row.nombres;
                    }
                },
                {
                    data: "sexo",
                    title: "Sexo",
                    visible: true,
                    orderable: true,
                    searchable: true,
                    render: function (data, type, row, meta) {
                        return row.sexo;
                    }
                },
                {
                    data: "departamento",
                    title: "Departamento",
                    visible: true,
                    orderable: true,
                    searchable: false,
                    render: function (data, type, row, meta) {
                        return row.departamento;
                    }
                },
                {
                    data: "provincia",
                    title: "Provincia",
                    visible: true,
                    orderable: true,
                    searchable: false,
                    render: function (data, type, row, meta) {
                        return row.provincia;
                    }
                },
                {
                    data: "distrito",
                    title: "Distrito",
                    visible: true,
                    orderable: true,
                    searchable: false,
                    render: function (data, type, row, meta) {
                        return row.distrito;
                    }
                },
                {
                    className: "center",
                    title: "Acción",
                    visible: true,
                    orderable: false,
                    searchable: false,
                    render: function (data, type, row, meta) {
                        var Buttons = "";
                        if (row.id > 0) {
                            Buttons += `<a class='btn btn-primary btn-sm px-2' onclick=showModal(${row.id})>Editar</a>`;
                            Buttons += `<a class='btn btn-danger btn-sm px-2' onclick=DeleteTrabajador(${row.id},'${row.nombres}')>Eliminar</a>`;
                        }
                        return Buttons;
                    }
                },
            ],
            fnRowCallback: function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                if (aData.sexo == "F") {
                    $(nRow).children().each(function (index, td) {
                        $(this).addClass('bg-orange');
                    });
                } else if (aData.sexo == "M") {
                    $(nRow).children().each(function (index, td) {
                        $(this).addClass('bg-blue');
                    });
                }
            }
        });
    }
    function showModal(id) {
        $("#modal-container").load(`@Url.Action("GetTrabajador","Home")?id=${id}`, function () {
            $("#mTrabajador").modal("show");
        });
    }
    function DeleteTrabajador(id, txt) {
        Swal.fire({
            title: `¿Está seguro de eliminar el registro: ${txt}?`,
            text: "No podrá revertir los cambios despues!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Sí, eliminalo!"
        }).then((result) => {
            if (result.isConfirmed) {
                try {
                    const response = fetch(`/Home/DeleteTrabajador?id=${id}`, {
                        method: "GET",
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    }).then(response => {
                        return response.json();
                    }).then(response => {
                        if (response.success) {
                            Swal.fire({
                                title: "Eliminado!",
                                text: response.message,
                                icon: "success"
                            }).then(function () {
                                $('#tblTrabajadores').DataTable().ajax.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: "error",
                                title: "Oops...",
                                text: response.message,
                            });
                        }
                    });

                    

                } catch (err) {
                    console.error("Error al eliminar:", err);
                    Swal.fire("Error inesperado", err.message, "error");
                }

                
            }
        });
    }
    function ApplyFilter(){
        $('#tblTrabajadores').DataTable().ajax.reload();
    }
    function RemoveFilter(){
        $("#ddlFilter").val("");
        $('#tblTrabajadores').DataTable().ajax.reload();
    }
</script>